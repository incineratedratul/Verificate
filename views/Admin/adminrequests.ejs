<html>
<head>
	<title>Requested Certificates</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
		nav {
			background-color: #0077B5;
			color: white;
			padding: 30px 0;
		  }
		  
		  nav ul {
			display: flex;
			justify-content: center;
			align-items: center;
			list-style: none;
			margin: 0;
			padding: 0;
		  }
		  
		  nav li {
			margin-right: 30px;
		  }
		  
		  nav a {
			color: white;
			text-decoration: none;
		  }
		  
		  h1 {
			text-align: center;
			margin-bottom: 30px;
		  }
		  body {
			font-family: Arial, sans-serif;
			background-color: #F3F3F3;
		  }
		  
		  h1 {
			text-align: center;
			font-size: 36px;
			color: #0077B5;
			margin-top: 50px;
		  }
		  
		  .notification-container {
			max-width: 600px;
			margin: 0 auto;
		  }
		  
		  .notification {
			background-color: #FFFFFF;
			border-radius: 5px;
			padding: 20px;
			margin-bottom: 20px;
			box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
		  }
		  
		  .notification h2 {
			font-size: 24px;
			color: #0077B5;
			margin-top: 0;
			margin-bottom: 10px;
		  }
		  
		  .notification p {
			font-size: 18px;
			color: #666666;
			margin-top: 0;
		  }
		  
		  .timestamp {
			font-size: 14px;
			color: #AAAAAA;
			float: right;
		  }
		  
		  table {
			border-collapse: collapse;
			width: 100%;
		  }
		  
		  th, td {
			border: 1px solid black;
			padding: 8px;
			text-align: left;
		  }
		  
		  th {
			background-color: #0077B5;
			color: white;
		  }
		  
		  tr:nth-child(even) {
			background-color: #f2f2f2;
		  }
		  
		  tr:hover {
			background-color: #ddd;
		  }
		  
		  button {
			background-color: #0077B5;
			color: white;
			border: none;
			padding: 8px 16px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 14px;
			margin: 4px 2px;
			cursor: pointer;
			border-radius: 4px;
		  }
			  
	</style>
</head>
<body>
    <nav>
		<ul>
		  <li><a href="/adminrequests">View Requests</a></li>
		  <li><a href="/adminverify">Verify Certificates</a></li>
		  <li><a href="/adminnotification">Notifications</a></li>
		  <li><a href="/adminpushtoblockchain">Push to Blockchain</a></li>
		  <li><a href="/adminipfs">IPFS</a></li>
		  <li><a href="/login">Logout</a></li>
		</ul>
	  </nav>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="#">Certificate Verification System</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="index.html">Upload Certificate</a>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="#">Requested Certificates<span class="sr-only">(current)</span></a>
				</li>
			</ul>
		</div>
	</nav>
	<div class="container my-5">
		<h1>Requested Certificates</h1>
		<table class="table table-striped my-5">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Full Name</th>
					<th scope="col">Certificate Name</th>
					<th scope="col">Certificate Type</th>
					<th scope="col">Institute</th>
					<th scope="col">Possible Verifier</th>
					<th scope="col">Certificate File</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody id="certificateTable">
			</tbody>
		</table>
	</div>
	<script>
        $(document).ready(function() {
            // Get certificate verification requests from the server
            $.ajax({
              type: 'GET',
              url: '/api/verification-requests',
              success: function(requests) {
                // Display the requests on the page
                var requestsContainer = $('#requests-container');
                for (var i = 0; i < requests.length; i++) {
                  var request = requests[i];
                  var cardHtml = '<div class="request-card">' +
                                 '<h2>' + request.fullname + '</h2>' +
                                 '<p>Certificate Name: ' + request.certificatename + '</p>' +
                                 '<p>Certificate Type: ' + request.certificatetype + '</p>' +
                                 '<p>Institute: ' + request.institute + '</p>' +
                                 '<p>Possible Verifier: ' + request.possibleverifier + '</p>' +
                                 '<a href="' + request.certificateurl + '">Download Certificate</a>' +
                                 '</div>';
                  requestsContainer.append(cardHtml);
                }
              },
              error: function() {
                alert('Failed to fetch verification requests from the server.');
              }
            });
          });
          
    </script>

</body>
</html>

